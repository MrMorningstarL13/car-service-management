// tsconfig.json
{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
    },
    "include": [
      "src",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.jsx",
      "src/types/**/*.d.ts"
    ],
  }
  